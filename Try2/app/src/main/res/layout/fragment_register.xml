<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/blury_background" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/appname"
            style="@style/h4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="85dp"
            android:drawableStart="@drawable/ic_kleine_shape"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="BuyWZme"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRightAddressForShopping"
            style="@style/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Let's Register"
            android:textAlignment="center"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nav_to_login" />

        <TextView
            android:id="@+id/nav_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="@font/sf_pro_display"
            android:gravity="center"
            android:text="Click on me to Login ðŸ‘ˆ"
            android:textAlignment="center"
            android:textColor="@color/g_light_red"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvRightAddressForShopping"
            app:layout_constraintEnd_toEndOf="@id/appname"
            app:layout_constraintStart_toStartOf="@id/appname"
            app:layout_constraintTop_toBottomOf="@id/appname" />

        <EditText
            android:id="@+id/ed_Fname"
            style="@style/editText"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/g_blue_gray200"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRightAddressForShopping" />

        <EditText
            android:id="@+id/ed_LName"
            style="@style/editText"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:hint="Last Name"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/g_blue_gray200"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ed_Fname" />

        <EditText
            android:id="@+id/ed_email"
            style="@style/editText"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/g_blue_gray200"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="@id/ed_LName"
            app:layout_constraintStart_toStartOf="@id/ed_LName"
            app:layout_constraintTop_toBottomOf="@+id/ed_LName" />

        <EditText
            android:id="@+id/ed_password"
            style="@style/editText"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/g_blue_gray200"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="@id/ed_LName"
            app:layout_constraintStart_toStartOf="@id/ed_email"
            app:layout_constraintTop_toBottomOf="@+id/ed_email" />


        <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
            android:id="@+id/buttonRegisterFrag"
            style="@style/blueButtonStyle"
            android:layout_width="165dp"
            android:layout_height="50dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="30dp"
            android:text="REGISTER"
            app:layout_constraintEnd_toEndOf="@id/ed_password"
            app:layout_constraintStart_toStartOf="@id/ed_password"
            app:layout_constraintTop_toBottomOf="@id/ed_password"
            app:spinning_bar_color="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>